<h1>All Appointments</h1>

<table class = "center">
  <thead>
    <tr>
      <th>Date</th>
      <th>Time start</th>
      <th>Time end</th>
      <th>Zip Code</th>
      <th>Sitter</th>
      <th>Back up sitter</th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.date %></td>
        <td><%= appointment.time_start %></td>
        <td><%= appointment.time_end %></td>
        <td><%= appointment.zip_code %></td>
        <% if appointment.sitter_id.nil? %>
        <td><%= link_to 'Reserve', confirm_path(appointment.id) %></td>
        <% else %>
        <td>Taken</td>
        <% end %>
        <% if appointment.back_up_sitter_id.nil? %>
        <td><%= link_to 'Become back-up', back_up_confirm_path(appointment.id) %></td>
        <% else %>
        <td>Taken</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>